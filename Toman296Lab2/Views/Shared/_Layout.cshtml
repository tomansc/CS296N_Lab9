<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="jumbotron" style="text-align:center; background-image: url(../../Content/forest.jpg); background-size:cover; height: 100px; border-bottom: 1px solid; box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2), 0 6px 20px 0 rgba(0, 0, 0, 0.19);color: white;
    text-shadow: 1px 1px 5px #000000;"><h2>Bellingham, Washington</h2></div>
    <nav class="navbar navbar-default" style="box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2), 0 6px 20px 0 rgba(0, 0, 0, 0.19);">
        <div class="container-fluid">
            <div class="navbar-header">
                <a class="navbar-brand" href="#">CS296 Lab 8<small>&nbsp;Data migrations</small></a>
            </div>
            <ul class="nav navbar-nav">
                <li><a href="~/Home/Index">Home</a></li>

                <li class="dropdown">
                    <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                        Extras
                        <span class="caret"></span>
                    </a>
                    <ul class="dropdown-menu">
                        <li><a href="~/Home/About">About the author</a></li>
                        <li><a href="~/Home/Contact">Contact the author</a></li>
                        <li><a href="~/Home/History">Bellingham's history</a></li>
                    </ul>
                </li>
                <li><a href="~/Map/Map">Map</a></li>
                <li class="dropdown">
                    <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                        News
                        <span class="caret"></span>
                    </a>
                    <ul class="dropdown-menu">
                        <li><a href="~/News/Recent">Recent news</a></li>
                        <li><a href="~/News/Archive">Archived news</a></li>
                    </ul>
                <li class="dropdown">
                    <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                        Forum
                        <span class="caret"></span>
                    </a>
                    <ul class="dropdown-menu">
                        <li><a href="~/ForumView">ForumView</a></li>
                    </ul>
                </li>
   
           
                <li>
                    @if (User.IsInRole("Admin") || (User.IsInRole("MegaAdmin")))
                    {
                        <a href="@Url.Action("ManageUserRoles", "Auth")"><span class="glyphicon glyphicon-edit"></span>&nbsp;&nbsp;Manage roles</a>
                    }
                </li>
            </ul>
            <ul class="nav navbar-nav navbar-right">
                <li>
                    @if (User.Identity.IsAuthenticated)
                    {
                        <a href="@Url.Action("Logout", "Auth")"><span class="glyphicon glyphicon-log-in"></span>&nbsp;&nbsp;Log Out</a>
                    }
                    else
                    {
                        <a href="@Url.Action("Login", "Auth")"><span class="glyphicon glyphicon-log-in"></span>&nbsp;&nbsp;Log In</a>
                    }
                </li>
                <li><a href="@Url.Action("Register", "Auth")"><span class="glyphicon glyphicon-user"></span>&nbsp;&nbsp;Register </a>
            </ul>
        </div>
    </nav>
    <div class="container">
        <div class="row">
            <div class="col-md-1"></div>
            <div class="col-md-9" style="background-color:gainsboro;box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2), 0 6px 20px 0 rgba(0, 0, 0, 0.19);padding: 25px;">
                <div class="well-sm" style="background-color:white;margin-bottom:20px;box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2), 0 6px 20px 0 rgba(0, 0, 0, 0.19);"><h2><small>@ViewBag.Message</small></h2></div>
                     @RenderBody()
            </div>
            <div class="col-md-2"></div>
        </div>
        <hr />
        <footer>
            <p>
                <small>
                    Lorem ipsum si dolor amet.
                </small>
            </p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
